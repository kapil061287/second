<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_marginTop="@dimen/input_margin_top_contact"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/input_layout_height">
    <TextView
        android:id="@+id/costomer_contact_us"
        android:text="Customer Care Phone"

        android:paddingLeft="@dimen/input_padding_left"
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:layout_height="match_parent" />
<TextView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:text="1800000000"
    android:layout_marginTop="@dimen/input_margin_top"
    android:layout_height="match_parent" />
    <Button
        android:textColor="#ff00ffff"
        android:text="Call Now"
        android:background="@drawable/input_box_draw_signup"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
</LinearLayout>

    <TextView
        android:textSize="18dp"
        android:text="@string/term_and_condition"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top_contact"
        android:layout_marginLeft="@dimen/input_padding_left"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="18dp"
        android:text="@string/data_protection_low"

        android:layout_marginTop="@dimen/input_margin_top_contact"
        android:layout_marginLeft="@dimen/input_padding_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/input_margin_top_contact"
    android:layout_height="@dimen/input_layout_height">
    <TextView
        android:text="Link To WebSite"
        android:layout_marginLeft="@dimen/input_padding_left"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:textSize="18dp"
        android:layout_marginTop="@dimen/input_margin_top"
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textSize="18dp"
        android:text="@string/site_url"
        android:layout_marginTop="@dimen/input_margin_top"
        android:layout_height="wrap_content" />

</LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:text="FAQs"
    android:layout_marginTop="@dimen/input_margin_top_contact"
    android:layout_marginLeft="@dimen/input_padding_left"
    android:layout_height="wrap_content" />
</LinearLayout>